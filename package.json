{
  "name": "torrent-poc",
  "version": "1.0.0",
  "description": "BitTorrent v1 client POC implementation in TypeScript",
  "main": "dist/index.js",
  "bin": {
    "torrent-poc": "dist/cli.js"
  },
  "scripts": {
    "dev": "ts-node src/cli.ts",
